#include <stdio.h>

int main() {
    int day;

    for (;;) {
        printf("Digite um némero de 1 a 7:");
        scanf("%d", &day);

        if (day <= 7) {
        switch (day) {
        case 1:
            printf("Domingo\n");
            break;
        case 2:
            printf("Segunda\n");
            break;
        case 3:
            printf("Terça\n");
            break;
        case 4:
            printf("Quarta\n");
            break;
        case 5:
            printf("Quinta\n");
            break;
        case 6:
            printf("Sexta\n");
            break;
        case 7:
            printf("Sábado\n");
            break;
    }
        }else{
            printf("Valor incorreto.\n");
        }
}
    return 0;
}
